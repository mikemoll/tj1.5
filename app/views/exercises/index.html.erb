<h1>Listing exercises</h1>

<table>
  <thead>
    <tr>
      <th>Exercise</th>
      <th>Load prescribed</th>
      <th>Sets</th>
      <th>Reps</th>
      <th>Tempo</th>
      <th>Set one actual</th>
      <th>Set two actual</th>
      <th>Set three actual</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.exercise %></td>
        <td><%= exercise.load_prescribed %></td>
        <td><%= exercise.sets %></td>
        <td><%= exercise.reps %></td>
        <td><%= exercise.tempo %></td>
        <td><%= exercise.set_one_actual %></td>
        <td><%= exercise.set_two_actual %></td>
        <td><%= exercise.set_three_actual %></td>
        <td><%= exercise.user %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

